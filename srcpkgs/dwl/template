# Template file for 'dwl'
pkgname=dwl
version=0.5
wrksrc="dwl-main"
revision=1
hostmakedepends="wayland-protocols xorg-server-xwayland wayland-devel pkg-config"
makedepends="wlroots0.17-devel pixman-devel"
short_desc="Simple, hackable dynamic tiling Wayland compositor (dwm for Wayland)"
license="GPL-3.0-or-later"
homepage="https://github.com/djpohly/dwl"
distfiles="https://codeberg.org/anon_cvptw/dwl/archive/main.tar.gz" 
#wait for 539 merge
checksum=6e462c98b0f554f4816ff0e16b1fc82ed85f56264a2d03e0dcf6f55bbeb01d92

do_build() {
    [ -e ${FILESDIR}/config.h ] && cp ${FILESDIR}/config.h config.h
    make
}

do_install() { 
    vbin dwl
    vdoc README.md
}
